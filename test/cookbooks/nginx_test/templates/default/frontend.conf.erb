server {
  listen 127.0.0.1:80 default;
  server_name _;
  root /var/www/;
  index index.html;
  charset utf-8;

  access_log <%= node['nginx']['config']['log_dir'] %>/frontend.access.log detailed;
  error_log <%= node['nginx']['config']['log_dir'] %>/frontend.error.log;

  location /nya {
    add_header Neko nya;
    return 204;
  }
}