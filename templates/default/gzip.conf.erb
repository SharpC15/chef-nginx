# All manual changes will be overwritten during the next chef run.
<%-
  types = @types || %w(
    text/plain
    text/css
    application/x-javascript
    text/xml
    application/xml
    application/xml+rss
    text/javascript
    application/json
  )

  enabled = if @enabled && ['on', true].include?(@enabled)
              'on'
            else
              'off'
            end
%>

gzip <%= enabled %>;
gzip_http_version <%= @http_version || '1.0' %>;
gzip_comp_level <%= @comp_version || 4 %>;
gzip_proxied <%= @proxied || 'any' %>;
gzip_types <%= types.join(' ') %>;
gzip_disable msie6;
gzip_vary <%= @vary || 'off' %>;